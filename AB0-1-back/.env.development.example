# Rails Environment
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/ab0_development
POSTGRES_DB=ab0_development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Configuration
SECRET_KEY_BASE=your_development_secret_key_base_here
RAILS_MASTER_KEY=your_rails_master_key_here

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Email Configuration (MailCatcher)
SMTP_HOST=mailcatcher
SMTP_PORT=1025
SMTP_DOMAIN=localhost
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTHENTICATION=none
SMTP_ENABLE_STARTTLS_AUTO=false

# Application URLs
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ActiveStorage Configuration
ACTIVE_STORAGE_SERVICE=local

# Background Jobs (Sidekiq)
SIDEKIQ_CONCURRENCY=5
SIDEKIQ_QUEUES=default,mailers,active_storage_analysis,active_storage_purge

# Logging
LOG_LEVEL=debug

# Development Tools
BETTER_ERRORS_ENABLED=true
WEB_CONSOLE_ENABLED=true

# Feature Flags
ENABLE_RATE_LIMITING=false
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
