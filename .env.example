# Database Configuration
POSTGRES_DB=ab0_production
POSTGRES_USER=ab0
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=db

# Database URL (automatically constructed from above variables)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:5432/${POSTGRES_DB}

# Rails Configuration
RAILS_ENV=production
RAILS_MASTER_KEY=your_rails_master_key_here
SECRET_KEY_BASE=your_secret_key_base_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# CORS Configuration
CORS_ORIGINS=https://avaliasolar.com.br,https://www.avaliasolar.com.br,https://api.avaliasolar.com.br

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.avaliasolar.com.br
NODE_ENV=production

# VM Configuration (for deployment)
VM_HOST=your_vm_host_here
VM_USER=your_vm_user_here
DEPLOY_DIR=$HOME/ab0-app

# GitHub Container Registry
GHCR_USERNAME=your_github_username
GHCR_PAT=your_github_personal_access_token
